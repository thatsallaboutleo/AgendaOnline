@model Contato
@{
    ViewData["Title"] = "Alterar Contato";
}

<div class="text-center">
    <h1 class="display-4">Alterar Contato</h1>
</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">
    
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Nome do contato">
        @Html.ValidationMessageFor(x=>x.Nome)
    </div>
    <br />

    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="E-mail do contato">
        @Html.ValidationMessageFor(x=>x.Email)
    </div>
    <br />

    <div class="form-group">
        <label for="telefone">Telefone</label>
        <input type="text" asp-for="Telefone" class="form-control" placeholder="Telefone do contato">
        @Html.ValidationMessageFor(x=>x.Telefone)
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>